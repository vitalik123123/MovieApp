<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_card"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imPosterInCard"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:background="@drawable/background_poster"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvTitleInCard"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp">

            </TextView>

            <TextView
                android:id="@+id/tvLittleInfoInCard"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:padding="5dp">

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivInFavorite"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_star_border"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>
    </LinearLayout>

</FrameLayout>